.list {
	/* padding: 0 30rpx; */
	color: #000;
	font-size: 28rpx;
	padding-bottom: 100rpx;
}

.tab_icon_box {
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

page {
	background-color: #f3f3f3;
}

.margin_right {
	margin-right: 20rpx;
}

.ongoing_box {
	padding: 20rpx;
	background-color: #fff;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.ongoing_left {
	color: #fe5512;
}

.ongoing_right {
	color: #666;
}

.ongoing_left_text {
	font-size: 28rpx;
	padding-left: 20rpx;
	color: #333;
}

.card_round_img {
	width: 60rpx;
	height: 60rpx;
	border-radius: 999rpx;
	background-color: #fe5512;
	margin-right: 20rpx;
	overflow: hidden;
}

.list_card_item {
	margin: 20rpx 0;
	padding: 30rpx;
	background-color: #fff;
}

.card_img {
	width: 120rpx;
	height: 120rpx;
	background-color: #d4d4d4;
	overflow: hidden
}

.card_content {
	margin-top: 20rpx;
}

.text-999 {
	color: #999;
}

.card_info_box {
	width: calc(100% - 140rpx);
	height: 120rpx;
}

.bottom_bar_btn {
	display: inline-block;
	background-color: #fe5512;
	color: #fff;
	text-align: center;
	padding: 10rpx 40rpx;
	border-radius: 8rpx;
	margin-left: 20rpx;
}

.bottom_bar {
	padding: 20rpx 30rpx;
	background-color: #fff;
	position: fixed;
	bottom: 0;
	width: calc(100% - 60rpx);
}

.text_info {
	color: #999;
	font-size: 28rpx;
}

.ellipsis_2 {
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	word-wrap: break-word;
	white-space: normal !important;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
