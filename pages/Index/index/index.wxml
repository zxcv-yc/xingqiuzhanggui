<view class="container home-container">
    <view class="row"  bindtap="goBusiness" wx:if="{{level == 2}}">
      <view class="logo"><image style="width: 100%;height: 200rpx;" mode="scaleToFill" src="/images/index/month.jpg"></image></view>
      <view class="main">
        <view class="icon"><image style="width: 45rpx;height: 45rpx;" mode="scaleToFill" src="/images/index/month1.png"></image></view>
        <view class="icon-text">门店营业额</view>
      </view>
    </view>
    <view class="row"  bindtap="goOrder" wx:if="{{level == 2}}">
      <view class="logo"><image style="width: 100%;height: 200rpx;" mode="scaleToFill" src="/images/index/waithandle.jpg"></image></view>
      <view class="main">
        <view class="icon"><image style="width: 45rpx;height: 45rpx;" mode="scaleToFill" src="/images/index/wait1.png"></image></view>
        <view class="icon-text">待处理</view>
      </view>
    </view>
    <view class="row"   bindtap="goScan">
      <view class="logo"><image style="width: 100%;height: 200rpx;" mode="scaleToFill" src="/images/index/saoma.jpg"></image></view>
      <view class="main">
        <view class="icon"><image style="width: 45rpx;height: 45rpx;" mode="scaleToFill" src="/images/index/saoma1.png"></image></view>
        <view class="icon-text">扫码核销</view>
      </view>
    </view>
    <view class="row"   bindtap="goInput">
      <view class="logo"><image style="width: 100%;height: 200rpx;" mode="scaleToFill" src="/images/index/hexiao.jpg"></image></view>
      <view class="main">
        <view class="icon"><image style="width: 45rpx;height: 45rpx;" mode="scaleToFill" src="/images/index/hexiao1.png"></image></view>
        <view class="icon-text">输入核销码</view>
      </view>
    </view>
    <view class="row" wx:if="{{level == 2}}">
      <button bindtap="goSubuject" >获取订阅推送</button>
    </view>
    
<!-- <button  open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button> -->
</view>