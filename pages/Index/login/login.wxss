.logo{
	width: 200rpx;
	margin: 100rpx auto;
}
.row{
	width: 80%;
	margin: 0 auto;
	display: flex;
	font-size: 30rpx;
	padding: 20rpx 15rpx;
	border-bottom: 1rpx solid #fd7611;
}
.logo-icon{
	margin-top: 12rpx;
	width: 35rpx;
}
.input{
	flex: 1;
	padding-top: 5rpx;
	margin-left: 15rpx;
}
.input input{
	width: 100%;
}
.btn{
	width: 80%;
	font-size: 30rpx;
	margin: 50rpx auto;
	height: 70rpx;
	line-height: 70rpx;
	border-radius: 35rpx;
	text-align: center;
	color: #fff;
	background: #fd7611;
}
.bottom{
	position: fixed;
	bottom: 30rpx;
	width: 100%;
	text-align: center;
	color: #666666;
	font-size: 24rpx;
}
.button-hover{
	color: #666;
	background: none;
}
button{
	background: none;
	color: #666;
}
button::after {
  border: none;
  background: none;
}
.login{
	text-align: center;
	font-size: 24rpx;
	color: red;
}

.marginright20 {
	margin-right: 20rpx;
}

.nomima {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}